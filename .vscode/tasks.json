{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run YouTube Downloader",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "download_youtube.py",
                "${input:youtubeUrl}"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ],
    "inputs": [
        {
            "id": "youtubeUrl",
            "type": "promptString",
            "description": "请输入YouTube链接"
        }
    ]
}
